alias setalias='vim ~/.bash_aliases && . ~/.bash_aliases'
alias cls=clear
alias ..='cd ..'
alias off='sudo shutdown -P now'

alias la='ls -a'
alias ll='ls -l'
alias dir='ls -AGl'

alias update='sudo apt-get update -y && sudo apt-get upgrade -y && sudo apt-get autoremove -y && sudo apm upgrade -c false'
alias install='sudo apt-get install -y'
